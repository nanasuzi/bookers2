<div class="container">
 <div class="row">
  <div class="mx-auto">
  <h1 class="my-3">Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
<% end %>

   <%= form_with model:@book, local:true do |f| %>
     <label for="book_title">Title</label>
       <%= f.text_field :title, class: "form-control book_title" %>

    <div class="my-3">
     <label for="book_opinion">Opinion</label>
       <%= f.text_area :body, class: "form-control book_title" %>
    </div>
     <div><%= f.submit 'Update Book', class: "btn btn-success" %></div>
   <% end %>
     <div class="my-3">
       <%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
     </div>
  </div>
 </div>
</div>