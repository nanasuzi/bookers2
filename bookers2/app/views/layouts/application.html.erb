<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark ">
     <div class="container">
        <a class="navbar-brand" href="/"><span class="text-light">Bookers</span></a>
      <ul class="navbar-nav">
      <% if user_signed_in? %>
        <%= link_to 'Home', user_path(current_user.id), class: 'text-light fas fa-home' %>

      　<%= link_to 'Users', users_path, class: 'text-light fas fa-users' %>

      　<%= link_to 'Books', books_path, class: 'text-light fas fa-book-open' %>

      　<%= link_to 'logout', destroy_user_session_path, method: :delete, class: 'text-light fas fa-sign-out-alt' %>

      <% else %>
        <%= link_to 'Home', root_path, class: 'text-light fas fa-home' %>

      　<%= link_to 'About', about_path, class: 'text-light fas fa-link' %>

      　<%= link_to 'sign up', new_user_registration_path, class: 'text-light fas fa-user-plus' %>

      　<%= link_to 'login', new_user_session_path, class: 'text-light fas fa-sign-in-alt' %>

      <% end %>
      </ul>
     </div>
    </nav>

  </header>
    <% flash.each do |messagetype, message| %>
    <%= content_tag :div, message, class: messagetype %>
    <% end %>

    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>

    </footer>

  </body>
</html>
