<div class="book-body">
  <h1>Bookers</h1>
<h3>User info</h3>
<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg"%>
<p>name</p><%= @user.name %>
<p>introduction</p><%= @user.introduction %>

<% if @user == current_user %>
<p><%= link_to "設定", edit_user_path(@user) %></p>
<% end %>


<h1>Books</h1>
<% @books.each do |book| %>
<div>

  <%= link_to book_path(book) do %>
  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <% end %>

  <p>Title:<%= link_to "#{book.title}", book_path(book) %></p>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>

<div>
 <h1>New book</h1>
   <%= form_with model:@book, url: books_path, method: :post, local:true do |f| %>
   <h3>Title</h3>
     <%= f.text_field :title %>
   <h3>Opinion</h3>
     <%= f.text_area :body %>
   <div>
     <%= f.submit 'Create Book' %>
   </div>
 <% end %>
</div>