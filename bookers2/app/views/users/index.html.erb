<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'books/list', user: @user %>

    <%= link_to edit_user_path(current_user), method: :get do %>
      <i class="fas fa-user-cog btn btn-outline-secondary btn-block mb-3"></i>
    <% end %>

   <%= render 'books/list-create', book: @book %>
  </div>

   <div class="col-md-8 offset-md-1">
    <h1 class="my-3">Users</h1>
     <table class="table table-hover">
       <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
         </tr>
        </thead>

        <tbody>
         <% @users.each do |user| %>
          <tr>
           <td>
           <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
           <% end %>
           </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
           </tr>
         <% end %>
        </tbody>
     </table>
   </div>
 </div>
</div>